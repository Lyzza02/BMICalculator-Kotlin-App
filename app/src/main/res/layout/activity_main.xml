<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E8F9FD"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:text="ðŸ§® BMI Calculator ðŸ§®"
        android:fontFamily="@font/quosmsemibold"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="@string/question_height"
        android:fontFamily="@font/quosmsemibold"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        android:fontFamily="@font/quosmsemibold"
        android:inputType="numberDecimal"
        android:background="@drawable/textbox_bg"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="@string/question_weight"
        android:fontFamily="@font/quosmsemibold"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        android:inputType="numberDecimal"
        android:fontFamily="@font/quosmsemibold"
        android:background="@drawable/textbox_bg"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/quosmsemibold"
        android:onClick="calculationBMI"
        android:text="@string/calculate_btn"
        android:textColor="#fafafa"
        app:backgroundTint="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/quosmsemibold"
        android:text="@string/result_lbl"
        android:textAllCaps="true"
        android:textSize="26sp"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/quosmsemibold"
        android:textSize="40sp"
        />

</LinearLayout>